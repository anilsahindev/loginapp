<h2 class="page-header">MyAlbums</h2>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <ul class="list-group">
                {{#each albums as |album key|}}
                    <li class="list-group-item"><a href="/?albumId={{album.id}}">{{album.title}}</a></li>
                {{/each}}
            </ul>
        </div>
        <div class="col-md-8">
                {{#each photos as |photo key|}}
                    <div class="col-md-3 col-sm-6 mb-3">
                        <img src="{{photo.thumbnailUrl}}" class="w-100" data-full-url="{{photo.url}}" onclick="setFullImageSource()" alt="{{photo.title}}">
                    </div>
                {{/each}}
        </div>
        <div class="col-md-12 text-center">
            <img src="" id="full-image" class="w-100">
        </div>
    </div>
</div>
